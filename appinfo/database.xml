<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*twofactor_yubikey</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <autoincrement>1</autoincrement>
                <default>0</default>
                <notnull>true</notnull>
                <length>4</length>
            </field>
            <field>
                <name>user_id</name>
                <type>text</type>
                <default></default>
                <notnull>true</notnull>
                <length>64</length>
            </field>
            <field>
                <name>yubikey_id</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>12</length>
            </field>

            <index>
                <name>yubikey_id_user_id</name>
                <unique>true</unique>
                <field>
                    <name>user_id</name>
                    <sorting>ascending</sorting>
                </field>
            </index>
        </declaration>
    </table>
</database>
